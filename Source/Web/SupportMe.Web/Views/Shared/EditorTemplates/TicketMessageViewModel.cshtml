@using SupportMe.Data.Common.Constants
@model SupportMe.Web.ViewModels.Message.TicketMessageViewModel

@Html.HiddenFor(m => m.Id)
@Html.EditorFor(m => m.Content)
@if (User.IsInRole(UserRole.Support) || User.IsInRole(UserRole.Admin))
{
    @Html.EditorFor(m => m.PricingUnits)
}
else
{
    <input id="Message_PricingUnits" name="Message.PricingUnits" type="hidden" value="0">
}