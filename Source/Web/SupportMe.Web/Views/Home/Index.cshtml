@{
    ViewBag.Title = "Home Page";
}

<br />
<div class="jumbotron text-center">
    <h1>Wellcome to Support Me System</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Action("TicketStatePie", "Statistics", new { area = string.Empty })
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Top opened tickets</h3>
                </div>
                <div class="panel-body">
                    @Html.Action("GetTopOpened", "Ticket", new { area = string.Empty })
                </div>
            </div>
        </div>
    </div>
}